            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                this:RegisterForClicks("LeftButtonUp", "RightButtonUp")
            </OnLoad>
            <OnUpdate>
                StrategosMinimapDot_Update()
            </OnUpdate>
            <OnClick>
                StrategosMinimapDot_OnClick()
            </OnClick>
            <OnEnter>
                StrategosMinimapDot_OnEnter()
            </OnEnter>
            <OnLeave>
                StrategosMinimapTooltip:Hide()
            </OnLeave>
        </Scripts>
